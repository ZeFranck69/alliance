<section id="{{ section.first_line_title.title|sanitize }}" class="involved-short" data-midnight="light" style="background-color: {{ section.background_color }};">
    <div class="main-wrapper">
        {% include 'partial/title.twig' %}
        <div class="involved-short-wrapper">
            
            {% if section.title_column %}
            <div class="involved-short__title">
                {{ section.title_column }}
            </div>
            {% endif %}
            
            <div class="involved-short-columns__wrapper">
                <div class="column-left">   
									<div class="column-title">
										{{ section.left_column.column_title }}
									</div>
									<div class="column-description">
										{{ section.left_column.description }}
									</div>
                </div>
                <div class="column-right">
									<div class="column-title">
										{{ section.right_column.column_title }}
									</div>			
									<div class="column-description">
                    {{ section.right_column.description }}
									</div>							
                </div>
            </div>
        </div>
        {% if section.cta.title %}
        <div class="cta-wrapper">
            <a href="{{ section.cta.url }}" class="cta cta--black">{{ section.cta.title }}</a>
        </div>
        {% endif %}
    </div>
</section>
