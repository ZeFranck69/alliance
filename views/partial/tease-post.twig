{% extends "partial/tease.twig" %}

{% block content %}
<a href="{{post.link}}" class="post-link"></a>
<div class="post-thumbnail__wrapper">
	{% if post.thumbnail %}
		<img src="{{ Image(post.thumbnail).src }}" alt="{{ post.thumbnail.title }}" class="post--thumbnail">
	{% else %}
		<img src="{{ options.default_image.url  }}" alt="{{ options.default_image.title }}" class="post--thumbnail">
	{% endif %}
</div>
<div class="post-content__wrapper">
	<div class="post-content__head">
		<div class="head-published-date">
			{{  post.post_date|date( 'd F Y' ) }}
		</div>
		<!-- <div class="head-author">
			By {{ post.author.name }}
		</div> -->
	</div>	
	<h2 class="post-content__title">{{ post.title }}</h2>
	<div class="post-content__excerpt">
		{{ post.excerpt }}
	</div>
</div>
<div class="post-cross-button">
	<a href="{{post.link}}" class="post-cross-link"></a>
</div>
{% endblock %}
